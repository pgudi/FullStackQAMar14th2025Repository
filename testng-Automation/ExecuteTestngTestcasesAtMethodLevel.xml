<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test name="Users and Products">
        <classes>
            <class name="com.sgtesting.users.Users">
                <methods>
                    <include name="createUser"></include>
                </methods>
            </class>

            <class name="com.sgtesting.products.Products">
                <methods>
                    <exclude name="modifyProduct"></exclude>
                </methods>
            </class>
        </classes>
    </test>
</suite>